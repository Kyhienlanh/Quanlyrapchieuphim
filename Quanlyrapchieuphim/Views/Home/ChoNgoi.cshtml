        }

        .custom-button:active {
            transform: translateY(2px);
        }

    .separator-line {
        width: 70%; /* Độ rộng của đường thẳng */
        margin: 20px auto; /* Khoảng cách từ đường thẳng đến các vị trí chỗ ngồi */
        border: none; /* Loại bỏ viền */
        height: 2px; /* Chiều cao của đường thẳng */
        background-color: orange; /* Màu sắc của đường thẳng */
    }

    .centered-h5 {
        text-align: center; /* Căn giữa văn bản */
        color: darkorange; /* Màu chữ */
        position: absolute; /* Đặt phần tử tương đối với phần tử cha */
        top: 50%; /* Đưa phần tử lên trên 50% của phần tử cha */
