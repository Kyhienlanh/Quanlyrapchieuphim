@model IEnumerable<Quanlyrapchieuphim.Models.SuatChieu>
@{
    Layout = "~/Areas/Admin/Views/Shared/ViewPage1.cshtml";
}
<style>
    th {
        color: red;
    }

    tr.separator {
        border-bottom: 1px solid pink; /* Change border color to green */
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDSuatChieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSuatChieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayChieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThoiGianChieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDPhongChieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDPhim)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="separator">
            <td>
                @Html.DisplayFor(modelItem => item.IDSuatChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSuatChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDPhongChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDPhim)
            </td>
            <td>
                <a href="@Url.Action("Edit", new {  id = item.IDSuatChieu })" class="btn btn-warning" role="button">Edit</a>
                <a href="@Url.Action("Details", new {  id = item.IDSuatChieu })" class="btn btn-primary" role="button">Details</a>
                <a href="@Url.Action("Delete", new {  id = item.IDSuatChieu })" class="btn btn-danger" role="button">Delete</a>

            </td>
        </tr>
    }
</table>
